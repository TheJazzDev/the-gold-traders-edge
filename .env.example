# =============================================================================
# Environment Variables Template
# Copy this file and rename to .env, then fill in your values
# =============================================================================

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
# Options: development, production
ENVIRONMENT=development

# =============================================================================
# DATA FEED CONFIGURATION
# =============================================================================
# Options: yahoo (free, 15min delay), metaapi (paid, real-time)
DATAFEED_TYPE=yahoo
SYMBOL=XAUUSD
TIMEFRAME=4H

# =============================================================================
# DATABASE
# =============================================================================
# Local development (SQLite)
DATABASE_URL=sqlite:///signals.db

# Production (Railway - use this path)
# DATABASE_URL=sqlite:////data/signals.db

# PostgreSQL (optional upgrade)
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_V1_STR=/v1
PROJECT_NAME=Gold Trader's Edge API
VERSION=1.0.0

# CORS - Add your frontend URLs
# Development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Production (update with your Vercel URL)
# CORS_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# API Server
API_HOST=0.0.0.0
API_PORT=8000
PORT=8000

# =============================================================================
# METAAPI CONFIGURATION (Required for demo trading)
# =============================================================================
# Leave blank if not using MetaAPI yet
MT5_CONNECTION_TYPE=metaapi
METAAPI_TOKEN=
METAAPI_ACCOUNT_ID=

# =============================================================================
# MT5 DIRECT CONNECTION (Windows only - alternative to MetaAPI)
# =============================================================================
# MT5_CONNECTION_TYPE=direct
# MT5_LOGIN=
# MT5_PASSWORD=
# MT5_SERVER=

# =============================================================================
# TRADING SYMBOL
# =============================================================================
MT5_SYMBOL=XAUUSD

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
MAX_RISK_PER_TRADE=0.01          # 1% risk per trade
MAX_POSITIONS=2                   # Maximum concurrent positions
MAX_DAILY_LOSS=0.03              # Stop trading if 3% daily loss
POSITION_SIZE_MODE=risk_based    # or 'fixed_lots'
FIXED_LOT_SIZE=0.01

# =============================================================================
# EXECUTION SETTINGS
# =============================================================================
MAX_SLIPPAGE_PIPS=10
MAGIC_NUMBER=123456

# =============================================================================
# SIGNAL GENERATION
# =============================================================================
ENABLE_DATABASE=true
ENABLE_LOGGER=true
ENABLE_CONSOLE=true
MIN_RR_RATIO=1.5

# =============================================================================
# MONITORING
# =============================================================================
HEARTBEAT_INTERVAL=5             # Minutes between heartbeats

# =============================================================================
# CONNECTION HEALTH
# =============================================================================
RECONNECT_ATTEMPTS=5
RECONNECT_DELAY=5

# =============================================================================
# SECURITY (Change these in production!)
# =============================================================================
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
