# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES (Railway)
# Copy these to your Railway dashboard under "Variables"
# =============================================================================

# Required - Data Feed
DATAFEED_TYPE=yahoo
SYMBOL=XAUUSD
TIMEFRAME=4H

# Required - Database
DATABASE_URL=sqlite:////data/signals.db

# Required - API
API_V1_STR=/v1
PROJECT_NAME=Gold Trader's Edge API
PORT=8000

# Required - CORS (UPDATE WITH YOUR VERCEL URL)
CORS_ORIGINS=https://your-app.vercel.app

# Signal Generation
ENABLE_DATABASE=true
ENABLE_LOGGER=true
ENABLE_CONSOLE=true
MIN_RR_RATIO=1.5
HEARTBEAT_INTERVAL=5

