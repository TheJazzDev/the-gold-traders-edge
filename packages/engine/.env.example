# =============================================================================
# TRADING CONFIGURATION - MetaAPI
# =============================================================================

# MetaAPI Configuration (for auto-trading)
# Sign up at https://metaapi.cloud to get these
MT5_CONNECTION_TYPE=metaapi
METAAPI_TOKEN=your_metaapi_token_here
METAAPI_ACCOUNT_ID=your_metaapi_account_id_here

# Trading Symbol
MT5_SYMBOL=XAUUSD

# Risk Management (CONSERVATIVE FOR DEMO TESTING)
MAX_RISK_PER_TRADE=0.01          # 1% risk per trade (conservative)
MAX_POSITIONS=2                   # Maximum 2 concurrent positions
MAX_DAILY_LOSS=0.03              # Stop trading if 3% daily loss
POSITION_SIZE_MODE=risk_based    # Risk-based position sizing
FIXED_LOT_SIZE=0.01              # Used if position_size_mode=fixed_lots

# Execution Settings
MAX_SLIPPAGE_PIPS=10             # Maximum acceptable slippage (10 pips for gold)
MAGIC_NUMBER=123456              # Unique identifier

# Data Feed (for signal generation)
# Options: yahoo (free, 15min delay), metaapi (paid, real-time)
DATAFEED_TYPE=yahoo              # FREE - Start with Yahoo Finance for testing
TIMEFRAME=4H

# Database
DATABASE_URL=sqlite:///signals.db

# =============================================================================
# TELEGRAM BOT CONFIGURATION (Signal Notifications)
# =============================================================================
# Get bot token from @BotFather on Telegram: /newbot
# Get chat ID from @userinfobot on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=1234567890

# Connection Health
RECONNECT_ATTEMPTS=5
RECONNECT_DELAY=5
HEARTBEAT_INTERVAL=60

# =============================================================================
# API CONFIGURATION (for Web Application)
# =============================================================================
API_V1_STR=/v1
PROJECT_NAME=Gold Trader's Edge API
VERSION=1.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000,http://localhost:8001
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REDIS_HOST=localhost
REDIS_PORT=6379
DEFAULT_TIMEFRAME=4h
DEFAULT_RULES=1,2,5,6
INITIAL_BALANCE=10000
RISK_PER_TRADE=2.0
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
